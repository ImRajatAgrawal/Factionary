<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/recyclerrelativelayout"
    android:layout_height="match_parent"
    >


    <ImageButton
        android:id="@+id/factimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@color/black_overlay"

        />

    <TextView
        android:id="@+id/titleoffact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="This is a fact"
        android:textColor="#fcf0f1"
        android:fontFamily="@font/cardo"
        android:textSize="40dp"
        android:textStyle="bold"
        android:visibility="visible" />
</RelativeLayout>
</android.support.v7.widget.CardView>